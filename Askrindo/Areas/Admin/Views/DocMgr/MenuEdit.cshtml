@model Askrindo.Models.HelpMenu

@{
    ViewBag.Title = "MenuEdit";
    Layout = "~/Areas/Admin/Views/Shared/_DocMgr.cshtml";
}

<h3>Edit Menu</h3>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.HiddenFor(m => m.MenuId)
    <table class="edit">
        <tr>
            <td>ID</td>
            <td>@Html.DisplayFor(m => m.MenuId)</td>
        </tr>
        <tr>
            <td>Menu</td>
            <td>
                @Html.TextBoxFor(m => m.MenuName, new { style = "width: 400px" })
                @Html.ValidationMessageFor(m => m.MenuName)
            </td>
        </tr>
        <tr>
            <td>Keterangan</td>
            <td>
                @Html.EditorFor(m => m.Description)
                @Html.ValidationMessageFor(m => m.Description)
            </td>
        </tr>
        <tr>
            <td>Visible?</td>
            <td>
                @Html.CheckBoxFor(m => m.IsVisible)
                @Html.ValidationMessageFor(m => m.IsVisible)
            </td>
        </tr>
    </table>
    
    <div style="padding-top: 12px">
        <input type="submit" value="Update" /> |
        @Html.ActionLink("Batal", "Index")
    </div>
}
