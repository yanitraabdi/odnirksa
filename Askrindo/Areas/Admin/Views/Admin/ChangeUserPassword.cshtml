@model Askrindo.Areas.Admin.Models.ChangeUserPasswordModel

@{
    ViewBag.Title = "ChangeUserPassword";
    Layout = "~/Areas/Admin/Views/Shared/_UserMgt.cshtml";

    var orgList = ViewBag.OrgList as List<KeyValuePair<string, string>>;
}

<h3>Ubah Password User</h3>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div style="padding-bottom: 12px">
    @Html.ActionLink("Edit User", "UserEdit", new { userId = Request.QueryString["userId"] }, null)
</div>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.UserName)
    <table class="edit">
    @foreach (var data in orgList)
    { 
        <tr>
            <td>
                @data.Key
            </td>
            <td>
                @data.Value
            </td>
        </tr>
    }
        <tr>
            <td>
                @Html.LabelFor(model => model.UserName)
            </td>
            <td>
                <strong>@Html.DisplayFor(model => model.UserName)</strong>
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.FullName)
            </td>
            <td>
                <strong>@Html.DisplayFor(model => model.FullName)</strong>
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(model => model.JobTitle)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Email)
            </td>
            <td>
                @Html.DisplayFor(model => model.Email)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.IsRCP)
            </td>
            <td>
                @Html.DisplayFor(model => model.IsRCP)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Password)
            </td>
            <td>
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.ConfirmPassword)
            </td>
            <td>
                @Html.EditorFor(model => model.ConfirmPassword)
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </td>
        </tr>
    </table>
    
    <div style="padding-top: 12px">
        <input type="submit" value="Update" />
    </div>
}

@Html.Partial("_Link_UserList")