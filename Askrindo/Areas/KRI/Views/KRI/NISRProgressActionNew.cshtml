@model Askrindo.Areas.KRI.Models.StrategicResponseViewModel

@{
    Layout = "~/Areas/KRI/Views/Shared/KRILayout.cshtml";
}

<div class="askrindo-content-box">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(d => d.SRNonInvestProgress.Id)
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Uraian</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(d => d.SRNIProgressAction.Detail, new { @class = "form-control askrindo-form-control" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Progress Strategic Response</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(d => d.SRNIProgressAction.Progress, new { @class = "form-control percent-input askrindo-form-control" })
            </div>
        </div>
        <div class="text-right">
            <a href="@Url.Action("NISRProgressList", new { Model.SRNonInvestProgress.Id })" class="btn askrindo-btn btn-outline-danger">Batal</a>
            <input type="submit" class="btn askrindo-btn askrindo-btn-color" value="Submit" onclick="getRawNumbox();" />
        </div>
    }
</div>

@section scripts{
<script>
    $(function () {
        $('.percent-input').NumBox({ symbol: '%', max: 100, places: 2, location: 'r' });
    });

    function getRawNumbox() {
        $('.percent-input').each(function () {
            this.value = $(this).NumBox('getRaw');
        });
    }

    //$('form').submit(function (e) {
