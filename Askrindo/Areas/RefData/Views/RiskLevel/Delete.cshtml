@model Askrindo.Models.RiskLevel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/RefData/Views/Shared/_RiskLevel.cshtml";
}

<h3>Edit Risiko Baru</h3>

<div style="padding-bottom: 12px" class="warning">
    Tingkat risiko berikut akan dihapus. Lanjutkan?
</div>

<table class="warning">
    <tr>
        <td>ID</td>
        <td>:</td>
        <td>
            @Html.DisplayFor(model => model.LevelId)
        </td>
    </tr>
    <tr>
        <td>Keterangan</td>
        <td>:</td>
        <td>
            @Html.DisplayFor(model => model.LevelName)
        </td>
    </tr>
    <tr>
        <td>Nilai Min</td>
        <td>:</td>
        <td>
            @Html.DisplayFor(model => model.MinValue)
        </td>
    </tr>
    <tr>
        <td>Nilai Maks</td>
        <td>:</td>
        <td>
            @Html.DisplayFor(model => model.MaxValue)
        </td>
    </tr>
    <tr>
        <td>Tindakan</td>
        <td>:</td>
        <td>
            @Html.DisplayFor(model => model.Action)
        </td>
    </tr>
    <tr>
        <td>Warna Latar Belakang</td>
        <td>:</td>
        <td>
            @Html.DisplayFor(model => model.BackColor)
        </td>
    </tr>
    <tr>
        <td>Warna Teks</td>
        <td>:</td>
        <td>
            @Html.DisplayFor(model => model.ForeColor)
        </td>
    </tr>
</table>

@using (Html.BeginForm())
{ 
    <div style="padding-top: 12px">
        <input type="submit" value="Hapus" /> |
        @Html.ActionLink("Batal", "Index")
    </div>
}