@model Askrindo.Models.RiskLevel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/RefData/Views/Shared/_RiskLevel.cshtml";
}

<h3>Edit Risiko Baru</h3>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.LevelId)
    <table class="edit">
        <tr>
            <td>ID</td>
            <td>
                @Html.DisplayFor(model => model.LevelId)
            </td>
        </tr>
        <tr>
            <td>Keterangan</td>
            <td>
                @Html.EditorFor(model => model.LevelName)
                @Html.ValidationMessageFor(model => model.LevelName)
            </td>
        </tr>
        <tr>
            <td>Nilai Min</td>
            <td>
                @Html.EditorFor(model => model.MinValue)
                @Html.ValidationMessageFor(model => model.MinValue)
            </td>
        </tr>
        <tr>
            <td>Nilai Maks</td>
            <td>
                @Html.EditorFor(model => model.MaxValue)
                @Html.ValidationMessageFor(model => model.MaxValue)
            </td>
        </tr>
        <tr>
            <td>Tindakan</td>
            <td>
                @Html.EditorFor(model => model.Action)
                @Html.ValidationMessageFor(model => model.Action)
            </td>
        </tr>
        <tr>
            <td>Warna Latar Belakang</td>
            <td>
                @Html.EditorFor(model => model.BackColor)
                @Html.ValidationMessageFor(model => model.BackColor)
            </td>
        </tr>
        <tr>
            <td>Warna Teks</td>
            <td>
                @Html.EditorFor(model => model.ForeColor)
                @Html.ValidationMessageFor(model => model.ForeColor)
            </td>
        </tr>
    </table>
    
    <div style="padding-top: 12px">
        <input type="submit" value="Update" /> |
        @Html.ActionLink("Batal", "Index")
    </div>
}