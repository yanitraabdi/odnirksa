@model Askrindo.Areas.RefData.Models.Mitigation.MitigationTypeViewModel

@{
    ViewBag.Title = "MitigationTypeNew";
    Layout = "~/Areas/RefData/Views/Shared/_Mitigation.cshtml";
}

<h3 style="padding-bottom: 0; margin-bottom: 0">Jenis Mitigasi Baru</h3>
@Html.Partial("_Info_MitigationCat", Model.MitigationCat)

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <table class="edit">
        <tr>
            <td>ID</td>
            <td>
                @Html.EditorFor(model => model.MitigationType.MitigationTypeId)
                @Html.ValidationMessageFor(model => model.MitigationType.MitigationTypeId)
            </td>
        </tr>
        <tr>
            <td>Nama Jenis Mitigasi</td>
            <td>
                @Html.EditorFor(model => model.MitigationType.MitigationTypeName)
                @Html.ValidationMessageFor(model => model.MitigationType.MitigationTypeName)
            </td>
        </tr>
    </table>
    
    <div style="padding-top: 12px">
        <input type="submit" value="Simpan" />
    </div>
}

@Html.Partial("_Link_MitigationTypeList", new ViewDataDictionary { { "CatId", Model.MitigationCat.MitigationCatId } })
