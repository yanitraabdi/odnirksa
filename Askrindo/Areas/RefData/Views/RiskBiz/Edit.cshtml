@model Askrindo.Models.bisni

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/RefData/Views/Shared/_RiskBiz.cshtml";
}

@using (Html.BeginForm())
{
    <table class="edit">
        <tr>
            <td>ID</td>
            <td>
                @Html.TextBoxFor(m => m.bisnisid)
                @Html.ValidationMessageFor(m => m.bisnisid)
             </td>
        </tr>
        <tr>
            <td>Peristiwa Resiko</td>
            <td>@Html.TextAreaFor(m => m.bisnis)</td>
        </tr>
        <tr>
            <td colspan="2"></td>
        </tr>
        <tr style="background-color: #ddd">
            <td colspan="2"><b>Detail</b></td>
        </tr>
        <tr>
            <td colspan="2" align="center" style="font-size:large"><b>@Html.ActionLink("Aktivitas", "AktivitasIndex", new { id = Model.bisnisid })</b></td>
        </tr>
    </table>
    
    <div style="padding-top: 12px">
        <input type="Submit" value="Simpan"/>
        <input type="Button" value="Batal" onclick="location.href='@Url.Action("index", "RiskBiz")';return false;"/>
    </div>
}