@model Askrindo.Areas.RefData.Models.OrgStruct.DivisiViewModel
           
@{
    ViewBag.Title = "DivisiNew";
    Layout = "~/Areas/RefData/Views/Shared/_OrgStruct.cshtml";
}

<h3>Divisi Baru</h3>
@*@Html.Partial("_Info_Dept", Model.Dept)*@

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <table class="edit">
        <tr>
            <td>ID</td>
            <td>
                @Html.EditorFor(model => model.Divisi.DivisionId)
                @*@Html.ValidationMessageFor(model => model.Param.DibawahDirektorat)*@
            </td>
        </tr>
        <tr>
            <td>Direktorat</td>
            <td>
                @Html.DropDownListFor(model => model.Divisi.DeptId, Model.Param.DivisiList, "")
                @*@Html.ValidationMessageFor(model => model.Param.DeptId)*@
            </td>
        </tr>
        <tr>
            <td>Divisi</td>
            <td>
                @Html.EditorFor(model => model.Divisi.DivisionName)
                @*@Html.ValidationMessageFor(model => model.Param.SubDeptName)*@
            </td>
        </tr>
        <tr>
            <td>Supporting Unit?</td>
            <td>
                @Html.CheckBoxFor(model => model.Divisi.IsSupporting)
                @*@Html.ValidationMessageFor(m => m.Param.IsApproved)*@
            </td>
        </tr>
    </table>
    
    <div style="padding-top: 12px">
        <input type="submit" value="Simpan" /> |
        @Html.ActionLink("Batal", "Divisi")
    </div>
}
