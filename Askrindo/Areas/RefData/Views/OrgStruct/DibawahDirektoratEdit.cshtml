@model Askrindo.Areas.RefData.Models.OrgStruct.DibawahDirektoratViewModal
           
@{
    ViewBag.Title = "DibawahDirektoratEdit";
    Layout = "~/Areas/RefData/Views/Shared/_OrgStruct.cshtml";
}

<h3>Edit Bagian di bawah Direktorat</h3>
@*@Html.Partial("_Info_Dept", Model.Dept)*@

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.DibawahDirektorat.SubDeptId)
    
    <table class="edit">
        <tr>
            <td>ID</td>
            <td>
                @Html.DisplayFor(model => model.DibawahDirektorat.SubDeptId)
                @*@Html.ValidationMessageFor(model => model.Param.DibawahDirektorat)*@
            </td>
        </tr>
        <tr>
            <td>Direktorat</td>
            <td>
                @Html.DropDownListFor(model => model.DibawahDirektorat.DeptId, Model.Param.Direktorat, "")
                @*@Html.ValidationMessageFor(model => model.Param.DeptId)*@
            </td>
        </tr>
        <tr>
            <td>Bagian di bawah Direktorat</td>
            <td>
                @Html.EditorFor(model => model.DibawahDirektorat.SubDeptName)
                @*@Html.ValidationMessageFor(model => model.Param.SubDeptName)*@
            </td>
        </tr>
        <tr>
            <td>Supporting Unit?</td>
            <td>
                @Html.CheckBoxFor(model => model.DibawahDirektorat.IsSupporting)
                @*@Html.ValidationMessageFor(m => m.Param.IsApproved)*@
            </td>
        </tr>
    </table>
    
    <div style="padding-top: 12px">
        <input type="submit" value="Simpan" /> |
        @Html.ActionLink("Batal", "DibawahDirektorat")
    </div>
}
