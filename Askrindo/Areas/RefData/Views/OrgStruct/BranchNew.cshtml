@model Askrindo.Models.Branch

@{
    ViewBag.Title = "BranchNew";
    Layout = "~/Areas/RefData/Views/Shared/_orgstruct.cshtml";
    var dept = ViewBag.Dept as Askrindo.Models.Dept;
}

<h3 style="padding-bottom: 0; margin-bottom: 0">Cabang Baru</h3>
@Html.Partial("_Info_Dept", dept)

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table class="edit">
        <tr>
            <td>ID</td>
            <td>
                @Html.EditorFor(model => model.BranchId)
                @Html.ValidationMessageFor(model => model.BranchId)
            </td>
        </tr>
        <tr>
            <td>Nama Cabang</td>
            <td>
                @Html.EditorFor(model => model.BranchName)
                @Html.ValidationMessageFor(model => model.BranchName)
            </td>
        </tr>
        <tr>
            <td>Kelas</td>
            <td>
                @Html.DropDownListFor(model => model.ClassId, ViewBag.ClassId as SelectList, "")
                @Html.ValidationMessageFor(model => model.ClassId)
            </td>
        </tr>
        <tr>
            <td>Kode Kantor</td>
            <td>
                @Html.EditorFor(model => model.BranchCode)
                @Html.ValidationMessageFor(model => model.BranchCode)
            </td>
        </tr>
        <tr>
            <td>Supporting Unit?</td>
            <td>
                @Html.CheckBoxFor(model => model.IsSupporting)
                @Html.ValidationMessageFor(model => model.IsSupporting)
            </td>
        </tr>
    </table>

    <div style="padding-top: 12px">
        <input type="submit" value="Simpan" /> |
        @Html.ActionLink("Batal", "BranchList", new { deptId = dept.DeptId }, null)
    </div>
}