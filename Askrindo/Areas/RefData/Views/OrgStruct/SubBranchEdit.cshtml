@model Askrindo.Areas.RefData.Models.OrgStruct.SubBranchViewModel

@{
    ViewBag.Title = "SubBranchEdit";
    Layout = "~/Areas/RefData/Views/Shared/_orgstruct.cshtml";
}

<h3 style="padding-bottom: 0; margin-bottom: 0">Edit Bagian</h3>
@Html.Partial("_Info_Branch", Model.SubBranch.Branch)

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.HiddenFor(m => m.SubBranch.BranchId)
    @Html.HiddenFor(m => m.SubBranch.SubBranchId)
    <table class="edit">
        <tr>
            <td>ID</td>
            <td>@Html.DisplayFor(m => m.SubBranch.SubBranchId)</td>
        </tr>
        <tr>
            <td>Nama Bagian</td>
            <td>
                @Html.EditorFor(m => m.SubBranch.SubBranchName)
                @Html.ValidationMessageFor(m => m.SubBranch.SubBranchName)
            </td>
        </tr>
        <tr>
            <td>Supporting Unit?</td>
            <td>
                @Html.EditorFor(model => model.SubBranch.IsSupporting)
                @Html.ValidationMessageFor(model => model.SubBranch.IsSupporting)
            </td>
        </tr>
    </table>

    <div style="padding-top: 12px">
        <input type="submit" value="Update" /> |
        @Html.ActionLink("Batal", "SubBranchList", new { branchId = @Model.SubBranch.BranchId }, null)
    </div>
}