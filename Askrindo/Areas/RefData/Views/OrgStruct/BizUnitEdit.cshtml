@model Askrindo.Areas.RefData.Models.OrgStruct.BizUnitViewModel

@{
    ViewBag.Title = "BizUnitEdit";
    Layout = "~/Areas/RefData/Views/Shared/_orgstruct.cshtml";
}

<h3 style="padding-bottom: 0; margin-bottom: 0">KUP Baru</h3>
@Html.Partial("_Info_Branch", Model.BizUnit.Branch)

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.BizUnit.BizUnitId)
    @Html.HiddenFor(model => model.BizUnit.BranchId)
    <table class="edit">
        <tr>
            <td>ID</td>
            <td>@Html.DisplayFor(model => model.BizUnit.BizUnitId)
            </td>
        </tr>
        <tr>
            <td>Nama KUP</td>
            <td>
                @Html.EditorFor(model => model.BizUnit.BizUnitName)
                @Html.ValidationMessageFor(model => model.BizUnit.BizUnitName)
            </td>
        </tr>
        <tr>
            <td>Kode Kantor</td>
            <td>
                @Html.EditorFor(model => model.BizUnit.BizUnitCode)
                @Html.ValidationMessageFor(model => model.BizUnit.BizUnitCode)
            </td>
        </tr>
        <tr>
            <td>Supporting Unit?</td>
            <td>
                @Html.CheckBoxFor(model => model.BizUnit.IsSupporting)
                @Html.ValidationMessageFor(model => model.BizUnit.IsSupporting)
            </td>
        </tr>
    </table>
    
    <div style="padding-top: 12px">
        <input type="submit" value="Update" /> |
        @Html.ActionLink("Batal", "BizUnitList", new { branchId = @Model.BizUnit.BranchId }, null)
    </div>
}