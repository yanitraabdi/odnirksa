@model IList<Askrindo.Models.JoinOrganisasi>

@{
    Layout = "~/Areas/RefData/Views/Shared/_orgstruct.cshtml";

    var canModify = (bool)ViewBag.CanModify;
}
<h3>Daftar Kantor Cabang</h3>

@if (canModify)
{
<div style="padding-bottom: 12px">
    @Html.ActionLink("Tambah", "KantorCabangNew")
</div>
}

<table class="list">
    <tr>
        <td align=center style="background-color: Silver;"><b>ID</b></th>
        <td align=center style="background-color: Silver;"><b>Direktorat</b></td>
        <td align=center style="background-color: Silver;"><b>Cabang</b></td>
        <td align=center style="background-color: Silver;"><b>Kelas</b></td>
        <td align=center style="background-color: Silver;"><b>Kode Cabang</b></td>
        <td align=center style="background-color: Silver;"><b>Supporting Unit</b></td>
        @if (canModify)
        {
        <td align=center style="background-color: Silver;"><b>Proses</b></td>
        }
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Branch.BranchId)</td>
        <td>@Html.DisplayFor(modelItem => item.Dept.DeptName)</td>
        <td>@Html.DisplayFor(modelItem => item.Branch.BranchName)</td>
        <td>@Html.DisplayFor(modelItem => item.BranchClass.ClassName)</td>
        <td>@Html.DisplayFor(modelItem => item.Branch.BranchCode)</td>
        <td align=center>@Html.DisplayFor(modelItem => item.Branch.IsSupporting)</td>
        @if (canModify)
        {
        <td>
            @Html.ActionLink("Edit", "KantorCabangEdit", new { id = item.Branch.BranchId }) |
            @Html.ActionLink("Hapus", "KantorCabangDelete", new { id = item.Branch.BranchId })
        </td>
        }
    </tr>
}

</table>
