@model Askrindo.Models.Division

@{
    Layout = "~/Areas/RefData/Views/Shared/_orgstruct.cshtml";
    var dept = ViewBag.Dept as Askrindo.Models.Dept;
}

<h3 style="padding-bottom: 0; margin-bottom: 0">Divisi Baru</h3>
@Html.Partial("_Info_Dept", dept)

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div style="padding-top: 12px"></div>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <table class="edit">
        <tr>
            <td>ID</td>
            <td>
                @Html.EditorFor(model => model.DivisionId)
                @Html.ValidationMessageFor(model => model.DivisionId)
            </td>
        </tr>
        <tr>
            <td>Nama Divisi</td>
            <td>
                @Html.EditorFor(model => model.DivisionName)
                @Html.ValidationMessageFor(model => model.DivisionName)
            </td>
        </tr>
        <tr>
            <td>Supporting Unit?</td>
            <td>
                @Html.CheckBoxFor(model => model.IsSupporting)
                @Html.ValidationMessageFor(model => model.IsSupporting)
            </td>
        </tr>
    </table>
    
    <p>
        <input type="submit" value="Simpan" /> |
        @Html.ActionLink("Batal", "DivList", new { deptid = dept.DeptId }, null)
    </p>
}