@model Askrindo.Models.Branch

@{
    ViewBag.Title = "BranchEdit";
    Layout = "~/Areas/RefData/Views/Shared/_orgstruct.cshtml";
}

<h3 style="padding-bottom: 0; margin-bottom: 0">Edit Cabang</h3>
@Html.Partial("_Info_Dept", Model.Dept)

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.BranchId)
    @Html.HiddenFor(model => model.DeptId)
    @Html.HiddenFor(model => model.ClassId)
    <table class="edit">
        <tr>
            <td>ID</td>
            <td>@Html.DisplayFor(model => model.BranchId)</td>
        </tr>
        <tr>
            <td>Nama Cabang</td>
            <td>
                @Html.EditorFor(model => model.BranchName)
                @Html.ValidationMessageFor(model => model.BranchName)
            </td>
        </tr>
        <tr>
            <td>Kelas</td>
            <td>@Html.DisplayFor(model => model.BranchClass.ClassName)</td>
        </tr>
        <tr>
            <td>Kode Kantor</td>
            <td>
                @Html.EditorFor(model => model.BranchCode)
                @Html.ValidationMessageFor(model => model.BranchCode)
            </td>
        </tr>
        <tr>
            <td>Supporting Unit?</td>
            <td>
                @Html.CheckBoxFor(model => model.IsSupporting)
                @Html.ValidationMessageFor(model => model.IsSupporting)
            </td>
        </tr>
    </table>

    <div style="padding-top: 12px">
        <input type="submit" value="Update" /> |
        @Html.ActionLink("Batal", "BranchList", new { deptId = Model.DeptId }, null)
    </div>
}