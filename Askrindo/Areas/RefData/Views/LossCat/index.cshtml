@model Askrindo.Areas.RefData.Models.LossCatModel

@{
    ViewBag.Title = "LossCat";
    Layout = "~/Areas/RefData/Views/Shared/_LossCat.cshtml";
}

<table class="list">
    <tr>
        <th>ID</th>
        <th>Klasifikasi Kerugian</th>
        <th colspan=2>Proses</th>
    </tr>
    @foreach (var item in Model.lossCatList)
    {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.KlasifikasiId)</td>
        <td>@Html.DisplayFor(modelItem => item.Klasifikasi)</td>
        <td>@Html.ActionLink("Edit", "Edit", new { id = item.KlasifikasiId })</td>
        <td>@Html.ActionLink("Delete", "Delete", new { id = item.KlasifikasiId })</td>
    </tr>
    }
</table>

<div style="padding-top: 12px">
    <input type="Button" value="Tambah" onclick="location.href='@Url.Action("insert", "LossCat", new { id = 1 })';return false;"/> 
</div>
