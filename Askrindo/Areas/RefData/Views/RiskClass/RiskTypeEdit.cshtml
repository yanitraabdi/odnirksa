@model Askrindo.Areas.RefData.Models.RiskClass.RiskTypeViewModel

@{
    ViewBag.Title = "RiskTypeEdit";
    Layout = "~/Areas/RefData/Views/Shared/_RiskClass.cshtml";
}

<h3 style="padding-bottom: 0; margin-bottom: 0">Edit Jenis Risiko</h3>
@Html.Partial("_Info_RiskGroup", Model.RiskType.RiskGroup)

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.RiskType.RiskTypeId)
    @Html.HiddenFor(model => model.RiskType.RiskGroupId)
    <table class="edit">
        <tr>
            <td>ID</td>
            <td>
                @Html.DisplayFor(model => model.RiskType.RiskTypeId)
            </td>
        </tr>
        <tr>
            <td>Nama Jenis Risiko</td>
            <td>
                @Html.EditorFor(model => model.RiskType.RiskTypeName)
                @Html.ValidationMessageFor(model => model.RiskType.RiskTypeName)
            </td>
        </tr>
    </table>
    
    <div style="padding-top: 12px">
        <input type="submit" value="Update" />
    </div>
}

@Html.Partial("_Link_RiskTypeList", new ViewDataDictionary { { "GroupId", Model.RiskType.RiskGroupId } })
