@model Askrindo.Models.RiskCat

@{
    ViewBag.Title = "RiskCatNew";
    Layout = "~/Areas/RefData/Views/Shared/_RiskClass.cshtml";
}

<h3>Kategori Risiko Baru</h3>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table class="edit">
        <tr>
            <td>ID</td>
            <td>
                @Html.EditorFor(model => model.RiskCatId)
                @Html.ValidationMessageFor(model => model.RiskCatId)
            </td>
        </tr>
        <tr>
            <td>Nama Kategori Risiko</td>
            <td>
                @Html.EditorFor(model => model.RiskCatName)
                @Html.ValidationMessageFor(model => model.RiskCatName)
            </td>
        </tr>
        <tr>
            <td>Group</td>
            <td>
                @Html.DropDownListFor(model => model.Grup, new SelectList(
                new List<SelectListItem>
                {
                    new SelectListItem { Text = "Risiko Utama", Value = "1"},
                    new SelectListItem { Text = "Proses Bisnis", Value = "2"},
                }, "Value" , "Text"))
                @Html.ValidationMessageFor(model => model.Grup)
            </td>
        </tr>
        <tr>
            <td>Status</td>
            <td>
                @Html.CheckBoxFor(model => model.Status) Aktif
                @*Html.ValidationMessageFor(model => model.Status)*@
            </td>
        </tr>
    </table>
    
    <div style="padding-top: 12px">
        <input type="submit" value="Simpan" />
    </div>
}

@Html.Partial("_Link_RiskCatList")
