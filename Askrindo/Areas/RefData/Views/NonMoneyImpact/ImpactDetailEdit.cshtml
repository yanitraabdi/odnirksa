@model Askrindo.Areas.RefData.Models.NonMoneyImpact.ImpactDetailViewModel

@{
    ViewBag.Title = "ImpactDetailEdit";
    Layout = "~/Areas/RefData/Views/Shared/_NonMoneyImpact.cshtml";
}

<h3 style="padding-bottom: 0; margin-bottom: 0">Tingkat Dampak</h3>
@Html.Partial("_Info_ImpactType", Model.ImpactDetail.ImpactType)

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ImpactDetail.ImpactDetailId)
    @Html.HiddenFor(model => model.ImpactDetail.ImpactTypeId)
    @Html.HiddenFor(model => model.ImpactDetail.ImpactLevelId)
    <table class="edit">
        <tr>
            <td>Level</td>
            <td>
                @Html.DisplayFor(model => model.ImpactDetail.ImpactLevelId) -
                @Html.DisplayFor(model => model.ImpactDetail.ImpactLevel.ImpactLevelName)
            </td>
        </tr>
        <tr>
            <td>Keterangan</td>
            <td>
                @Html.TextAreaFor(model => model.ImpactDetail.ImpactDetailName, new { style = "width: 400px" })
                @Html.ValidationMessageFor(model => model.ImpactDetail.ImpactDetailName)
            </td>
        </tr>
    </table>
    
    <div style="padding-top: 12px">
        <input type="submit" value="Update" />
    </div>
}

@Html.Partial("_Link_ImpactDetailList", new ViewDataDictionary { { "TypeId", Model.ImpactDetail.ImpactTypeId } })