@model Askrindo.Areas.RefData.Models.NonMoneyImpact.ImpactTypeViewModel

@{
    ViewBag.Title = "ImpactTypeEdit";
    Layout = "~/Areas/RefData/Views/Shared/_NonMoneyImpact.cshtml";
}

<h3 style="padding-bottom: 0; margin-bottom: 0">Edit Dampak</h3>
@Html.Partial("_Info_ImpactCat", Model.ImpactType.ImpactCat)

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ImpactType.ImpactCatId)
    @Html.HiddenFor(model => model.ImpactType.ImpactTypeId)
    <table class="edit">
        <tr>
            <td>ID</td>
            <td>
                @Html.DisplayFor(model => model.ImpactType.ImpactTypeId)
            </td>
        </tr>
        <tr>
            <td>Nama Dampak</td>
            <td>
                @Html.EditorFor(model => model.ImpactType.ImpactTypeName)
                @Html.ValidationMessageFor(model => model.ImpactType.ImpactTypeName)
            </td>
        </tr>
        <tr>
            <td>Keterangan</td>
            <td>
                @Html.EditorFor(model => model.ImpactType.Notes)
                @Html.ValidationMessageFor(model => model.ImpactType.Notes)
            </td>
        </tr>
    </table>
    
    <div style="padding-top: 12px">
        <input type="submit" value="Simpan" />
    </div>
}

@Html.Partial("_Link_ImpactTypeList", new ViewDataDictionary { { "CatId", Model.ImpactType.ImpactCatId } })
