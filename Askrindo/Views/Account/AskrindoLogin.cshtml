@using Askrindo.Models
@model AskrindoLoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Askrindo Enterprise Risk Management System</title>
    @Styles.Render("~/Content/askrindo/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-color: #fdf9fa;">
    <div class="container-fluid">
        <div class="row" style="overflow-x: hidden;">
            <div class="col-lg-3">
                <div class="text-center" style="margin: 20px 0;">
                    <img src="@Url.Content("~/Content/Image/logo-login.png")" style="max-width: 100%;" />
                </div>
                <div id="login-row" class="row justify-content-center align-items-center">

                    @using (Html.BeginForm("AskrindoLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", @style = "width: 100%; padding: 20px;" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.Username, new { @style = "padding-left: 8px" })
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @style = "border-bottom-width: 2px;border-top-width: 0;" })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @style = "padding-left: 8px" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "border-bottom-width: 2px;border-top-width: 0;" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="remember-me"> @Html.CheckBoxFor(m => m.RememberMe) @Html.LabelFor(m => m.RememberMe)</label>
                        </div>
                        <div class="form-group">
                            <input type="submit" style="width: 100%;padding-top: 10px;padding-bottom: 10px;" name="submit" class="btn askrindo-btn askrindo-btn-color" value="Login">
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-9 d-none d-lg-inline" style="background-color: #b8b6b7;padding: 0 0 0 6px;">
                <img src="@Url.Content("~/Content/Image/bg-login-with-text.jpg")" style="height: 100vh;" />
            </div>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap4")

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>

